{
    "compilerOptions": {
        "allowJs": true,
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es6",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "es5",
            "es2015.promise"
        ]
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
}